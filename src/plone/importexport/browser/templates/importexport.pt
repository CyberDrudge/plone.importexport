<head>

</head>
<body>
  <metal:js fill-slot="javascript_head_slot">
    <script type="text/javascript" src="++resource++plone.importexport/import_export.js"></script>
  </metal:js>

  <metal:content fill-slot="content-core">

  <div class="pat-autotoc autotabs" data-pat-autotoc="section:fieldset;
    levels:legend;">

    <h3>Title</h3>
    <!-- Basic Tab -->
    <fieldset>
      <legend i18n:translate="">Basic</legend>

      <!-- Basic Export -->
      <section>

        <h2 i18n:translate="">Export</h2>

        <form action="export" method="POST">
          <input type="submit" name="export" value="Export"
            i18n:attributes="value" />
        </form>

      </section>

      <!-- Basic Import -->
      <section>

        <!-- <input class="pat-pickadate" data-pat-pickadate="time:true"/> -->
        <h2 i18n:translate="">Import</h2>

        <!-- <div class="field">
            <div class="formHelp" i18n:translate="import_basic_importfile_help">
            Select a CSV or a ZIP file providing the contents to import.
          </div>
          <input type="file" name="importfile"  />
        </div> -->

        <form action="imports" enctype="multipart/form-data" method="POST">
           <div class="field">
             <label for="importfile">File</label>
             <div class="formHelp" i18n:translate="import_basic_importfile_help">
               Select a CSV or a ZIP file providing the contents to import.
             </div>
             <input type="file" name="file" multiple="multiple" />
           </div>
           <input type="submit" name="imports" value="Import" i18n:attributes="value" />
        </form>

        <!-- <form action="imports" method="POST">
          <div class="pat-upload" data-pat-upload='{
            "showTitle": false
            }'>
          </div>
        </form> -->
      </section>

    </fieldset>

    <!-- Advance Tab -->
    <fieldset>
      <legend i18n:translate="">Advance</legend>

      <div class="pat-autotoc autotabs" data-pat-autotoc="section:subfieldset;
        levels:h1;">

      <!-- Advance Export -->
      <subfieldset>
        <h1 i18n:translate="">Export</h1>

        <form action="export" method="POST">

          <label> Specify Export type </label>
          <br>

          <input type="radio" name="exportFormat" value="csv" >
            Only csv
          </input>

          <input type="radio" name="exportFormat" value="files" >
            Only files
          </input>

          <input type="radio" name="exportFormat" value="combined" checked="checked">
            Combined
          </input>

          <br>
          <br>

          <label> Specify fields to export </label>
          <h5> Defualt fields:{@type, path, id, UID}</h5>
          <h5> Caution: If nothing is selected, all fields will be exported</h5>
          <section>

            <div >
              <input type="button" onclick= "selectExport()"  value="Select all"
                name="Select"/>
              <input type="button" onclick="deselectExport()" value="Deselect all"
                name="Deselect"/>
            </div>

            <table style="border:0; width:100%">
              <tr tal:repeat="val python: view.getExportfields().values()">
                <td tal:repeat="index python: range(len(val))">
                  <input type="checkbox" name='exportFields' value='null'
                    tal:attributes="value python: val[index]">
                  <p tal:content="text python: val[index]">
                    field
                  </p>
                  </input>
                </td>
              </tr>
            </table>

          </section>

          <br>

          <!-- <div id="change"></div>
          <input type = "button" onclick = "Fun()" name = "Select"
             value = "Click Me" /> -->

          <input type="submit" name="export" value="Export"
            i18n:attributes="value" />

          <script>

            function selectExport() {
              checkboxes = document.getElementsByName("exportFields");
              for(var i in checkboxes) {
                checkboxes[i].checked = true;
              }
            }

            function deselectExport() {
              checkboxes = document.getElementsByName("exportFields");
              for(var i in checkboxes) {
                checkboxes[i].checked = false;
              }
            }

          </script>

        </form>

      </subfieldset>

      <!-- Advance Import -->
      <!-- TODO exist define wheather user have uploaded a file before? -->
      <subfieldset tal:define="exist python: True">

        <h1 i18n:translate="">Import</h1>
        <!-- TODO use js as TAL cannot fulfill complete requirements -->
          <div tal:condition="python: exist">

            <form action="imports" enctype="multipart/form-data" method="POST">


              <div class="field">
                <label for="importfile">File</label>
                <div class="formHelp" i18n:translate="import_basic_importfile_help">
                  Select a CSV or a ZIP file providing the contents to import.
                </div>
                <input type="file" name="file" multiple="multiple" id="uploadID" />

                <script>

                  var file = document.getElementById("uploadID");
                  var table = document.getElementById("table");

                  file.onchange = function(){
                    importfile = file.files;
                    console.log(importfile);

                    <!-- set importfile in html div data attr, call matrix data from that tal -->
                    <!-- var data = document.getElementById("setdata");
                    data.setAttribute("importfile", file.files);
                    matrix = data.getAttribute("matrix"); -->

                    <!-- or -->

                    <!-- call python function from js -->


                    <!-- var html = "<table>";
                    for (var i in matrix){
                      html += "<tr>"
                      for (var j in i){
                        html += '<td>' + j +"</td>"
                      }
                      html += "</tr>"
                    }
                    html += "</table>"
                    table.innerHTML = html -->
                  };

                </script>


              </div>

               <!-- TODO trigger the below div only on uploading file -->
              <div>
                <label> Specify fields to import </label>
                <h5> Defualt fields:{@type, path, id, UID}</h5>

                <section>

                  <div >
                    <input type="button" onclick= "selectImport()"  value="Select all"
                      name="Select"/>
                    <input type="button" onclick="deselectImport()" value="Deselect all"
                      name="Deselect"/>om

                    <script>
                      function selectImport() {
                        checkboxes = document.getElementsByName("importFields");
                        for(var i in checkboxes) {
                          checkboxes[i].checked = true;
                        }
                      };

                      function deselectImport() {
                        checkboxes = document.getElementsByName("importFields");
                        for(var i in checkboxes) {
                          checkboxes[i].checked = false;
                        }
                      };
                    </script>

                  </div>

                  <!-- <div id="setdata" matrix="" importfile=""
                    tal:define="importfile string:importfile"
                    tal:attributes="matrix python: view.getImportfields().values()">
                  </div> -->

                  <div id="table">
                    <!-- <table cellspacing="0" cellpadding="0" border="0'">
                      <tr tal:repeat="val python: view.getImportfields().values()">
                        <td tal:repeat="index python: range(len(val))">
                          <input type="checkbox" name='importFields' value='null'
                            tal:attributes="value python: val[index]">
                          <p tal:content="text python: val[index]">
                            field
                          </p>
                          </input>
                        </td>
                      </tr>
                    </table> -->
                  </div>

                </section>

                <label> Action to take if content already existed?</label>
                <br>

                <input type="radio" name="actionExist" value="update"
                  checked="checked">
                  Update
                </input>

                <input type="radio" name="actionExist" value="ignore" >
                  Ignore
                </input>

                <input type="radio" name="actionExist" value="new">
                  Create New
                </input>
              </div>

              <br>
              <br>

              <input type="submit" name="imports" value="Import" i18n:attributes="value" />
              <!-- <button type="button" onclick=view.setFile()> Re-Upload </button> -->


            </form>

          </div>

          <!-- <div tal:condition="python: not exist">

            <form action="fileAnalyse" enctype="multipart/form-data" method="POST">

              <div class="pat-upload" data-pat-upload='{
                "showTitle": false
                }'>
              </div>

            </form>

          </div> -->


      </subfieldset>

      </div>
    </fieldset>

  </div>

  </metal:content>
</body>
</html>
